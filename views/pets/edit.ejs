<% include ../partials/header %>
<% include ../partials/navbar2 %>


  <div class="container">
    <div class="row">
      <h1 class="text-center">Edit <%= pet.name %> </h1>

      <div class="form">
        <form action="/pets/<%= pet._id %>/?_method=PUT" method="POST">
          <div class="form-group">
            <label for="name">Pet Name</label>
            <input id="name" class="form-control"type="text" name="name" value="<%= pet.name %>">
          </div>
          <div class="form-group">
            <label for="image">Pet Photo URL</label>
            <input id="image" class="form-control"type="text" name="images" value="<%= pet.images %>">
          </div>
          <div class="form-group">
            <label for="breed">Pet Breed</label>
            <input id="breed" class="form-control"type="text" name="breed" value="<%= pet.breed %>">
          </div>
          <div class="form-group">
            <label for="type">Animal type</label>
            <input id="type" class="form-control"type="text" name="type" value="<%= pet.type %>">
          </div>
          <div class="form-group">
            <label for="age">Pet Age</label>
            <input id="age" class="form-control"type="text" name="age" value="<%= pet.age %>" >
          </div>
          <div class="form-group">
            <label for="location">Pet Location</label>
            <input id="location" class="form-control"type="text" name="location" id="location" value="<%= pet.location %>">
          </div>
          <div class="form-group">
            <label for="description">Pet Bio</label>
            <textarea class="form-control"type="text" id="description"name="description" value="<%= pet.description %>"><%= pet.description %></textarea>
          </div>
          <div class="form-group">

            <div id="side">
              <label for="private">Make Public: </label>
              <input checked class="form-control"type="radio" value="false" name="isPrivate" id="private">
            </div>
            <div id="side2">
              <label for="private2">Make Private: </label>
              <input  class="form-control"type="radio" value="true" name="isPrivate" id="private2">
            </div>
          </div>
          <div class="form-group">
            <input class="btn btn-prim btn-lg btn-block" type="submit">
          </div>
        </form>
        <a href="/pets/<%= pet._id %>" class="btn-text">Go Back</a>
      </div>
    </div>
  </div>

<% include ../partials/footer %>
