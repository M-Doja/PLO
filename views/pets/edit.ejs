<% include ../partials/header %>
<% include ../partials/navbar2 %>


  <div class="container">
    <div class="row">
      <h1 class="text-center">Edit <%= pet.name %> </h1>

      <div class="form">
        <form action="/pets/<%= pet._id %>/?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control"type="text" name="name" value="<%= pet.name %>">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="images" value="<%= pet.images %>">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="breed" value="<%= pet.breed %>">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="type" value="<%= pet.type %>">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="age" value="<%= pet.age %>" >
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="location" id="location" value="<%= pet.location %>">
          </div>
          <div class="form-group">
            <textarea class="form-control"type="text" name="description" value="<%= pet.description %>"><%= pet.description %></textarea>
          </div>
          <div class="form-group">

            <div id="side">
              <label for="private">Make Public: </label>
              <input checked class="form-control"type="radio" value="false" name="isPrivate" id="private">
            </div>
            <div id="side2">
              <label for="private2">Make Private: </label>
              <input  class="form-control"type="radio" value="true" name="isPrivate" id="private2">
            </div>
          </div>
          <div class="form-group">
            <input class="btn btn-prim btn-lg btn-block" type="submit">
          </div>
        </form>
        <a href="/pets/<%= pet._id %>" class="btn-text">Go Back</a>
      </div>
    </div>
  </div>

<% include ../partials/footer %>
