<% include ../partials/header %>
<% include ../partials/navbar2 %>


  <div class="container">
    <div class="row">
      <h1 class="text-center">Create a new Memorial</h1>

      <div class="form">
        <form action="/campgrounds" method="post">
          <div class="form-group">
            <input class="form-control"type="text" name="name" placeholder="Pet name">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="images" placeholder="Pet image url">
          </div>
          <div class="form-group">
            <input class="form-control"type="number" name="price" placeholder="Pet age" >
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="location" id="location" placeholder="Pet location">
          </div>
          <div class="form-group">
            <textarea class="form-control"type="text" name="description" placeholder="Pet description"></textarea>
          </div>
          <div class="form-group">
            <input class="btn btn-prim btn-lg btn-block" type="submit">
          </div>
        </form>
        <a href="/memorial"class="btn-text">Go Back</a>
      </div>
    </div>
  </div>

