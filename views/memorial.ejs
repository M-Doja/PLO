   <div class="container-fluid">
     <div class="row">
       <div class="col-md-12">
         <form>
           <div class="form-group">
  					<input type="text" required class="form-control" id="petSrchFd" placeholder="Search for Pets"/>
  				</div>
          <div class="form-group text-center">
            <input type="submit" class="loginBtn bkBtn btn btn-large" value="Search Memorials" >
          </div>
         </form>
       </div>
     </div>
   </div>


   <div class="row text-center">
     <div class="">
       <ul>
         <li><a class="loginBtn bkBtn btn btn-large " href="/add_memorial">Add A Memorial</a></li>
       </ul>
     </div>
     <ul>
       <% pets.forEach(function(pet) { %>
         <div class="col-lg-3 col-sm-4">
           <li class="petPost">
             <h3><%= pet.name.toUpperCase() %></h3>
             <p>AGE <br><%= pet.age %></p>
            <div class="text-center">
              <img src="/imgs/remembrance-2.jpg" width="120" alt="">
            </div>
             <br>

             <div class="text-center">
               <strong><%= pet.gender %></strong>
               <%= pet.breed %>
               <%= pet.type %>
            </div>
           </li>
         </div>
       <% }) %>
     </ul>
   </div>
</div>


