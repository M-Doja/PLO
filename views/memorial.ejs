   </div>


   <div class="row text-center">
     <ul>
       <% pets.forEach(function(pet) { %>
         <div class="col-lg-3 col-sm-4">
           <li class="petPost">
             <h3><%= pet.name.toUpperCase() %></h3>
             <p><%= pet.age %><br>AGE</p>
            <div class="text-center">
              <img src="/images/remembrance-2.jpg" width="120" alt="">
            </div>
             <br>

             <div class="text-center">
               <strong><%= pet.gender %></strong>
               <%= pet.breed %>
               <%= pet.type %>
            </div>
           </li>
         </div>
       <% }) %>
     </ul>
   </div>
</div>


