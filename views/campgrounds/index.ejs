<% include ../partials/header %>
<% include ../partials/navbar %>

  <% if(currentUser && currentUser.isAdmin) { %>
    <h1>You're an Admin</h1>
  <% } %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">

        <div class="text-center">
          <img id="pic"  class="inline"src="imgs/tent2.png"  width="130" alt="">
          <h1 class="inline text-center">Welcome to CampStar</h1>
        </div>
      <!-- </div> -->

        <p class="text-center"><strong>View our hand-picked campgrounds from all over the world</strong></p>
        <p>
          <a class="btn btn-prim btn-block" href="/campgrounds/new"> Add New Camp Site</a>
        </p>
        <p>
          <form action="/campgrounds" method="GET" class="form-inline text-center" id="campground-search">
            <div class="form-group">
              <input type="text" name="search" placeholder="Campground search..." class="form-control">
            </div>
            <div class="form-group">
              <input class="btn btn-prim btn-sm" id="srcBtn"  type="submit" value="Search" >
            </div>
            <div class="form-group">
              <a href="/campgrounds"class="btn-text">reset form</a>
            </div>
          </form>
         </p>
      </div>
    </header>

    <div class="row text-center" id="display" >
      <% campgrounds.forEach(function(campsite){ %>
        <div class="col-md-3 col-sm-6 ">
          <div class="small ring">
            <img src="<%= campsite.images%>" alt="">
            <div class="caption">
              <h4 class="siteName"><%= campsite.name.toUpperCase() %></h4>
            </div>
            <p class="white">
              <a  href="/campgrounds/<%= campsite._id %>" class="btn btn-prim">More information</a>
            </p>

          </div>
        </div>
      <% })%>
    </div>



    <br><br>
    <a href="/"class="btn-a"><  Back to landing page</a>
  </div>

<% include ../partials/footer %>
